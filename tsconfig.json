{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "outDir": "dist",
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "isolatedModules": true,
    "strictNullChecks": false,
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*"], // Assurez-vous que tous les fichiers TypeScript sont inclus.
  "exclude": ["node_modules", "dist"] // Exclut les fichiers compil√©s et node_modules
}
